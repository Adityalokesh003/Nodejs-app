<%include ../partials/header%>
<div class="container">
	<a href="/visitingplaces/<%=visitingplace._id%>" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span>Go Back </a>
	
<div class="row">
	<h1 style="text-align: center; color: blue; text-decoration: underline;">Edit <%=visitingplace.name%></h1>
	<div style = "margin: 20px auto; width: 30%;">
		
		<form action="/visitingplaces/<%=visitingplace._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text"  name="visitingplace[name]" value="<%=visitingplace.name%>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text"   name="visitingplace[image]" value="<%=visitingplace.image%>">
			</div>
			<div class="form-group">
				<textarea class="form-control" name="visitingplace[description]"> <%=visitingplace.description%></textarea>      
			</div>
			
			
			<button class="btn btn-lg btn-primary btn-block">Update</button>

		</form>
		
	</div>

	
</div>
 


</div>

<%include ../partials/footer%>
