<%include ../partials/header%>
<a href="/visitingplaces" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span>Go Back </a>
<div class="container">
	
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Vizag-Tourism</p>
			<div class="list-group">
				<li class="list-group-item active" >info 1</li>
				<li class="list-group-item">info 2</li>
				<li class="list-group-item">info 3</li>
 			</div>
		</div>

		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%=visitingplace.image%>" alt="">
				<div class="caption-full">
					<h4 class="pull-right">Rs.9.00</h4>
					<h4><a href=""><%=visitingplace.name%></a></h4><hr>
					<p style="font-size: 1.5em;"> <%= visitingplace.description%> </p>
					<hr>
					<p><em>Posted by <strong><%=visitingplace.author.username%></strong></em></p>
					<%if(currentUser && visitingplace.author.id.equals(currentUser._id)){%>
					&nbsp&nbsp&nbsp<a href="/visitingplaces/<%=visitingplace._id%>/edit" class="btn btn-warning btn-xs width"> EDIT  </a> 
					<form action="/visitingplaces/<%=visitingplace._id%>?_method=DELETE" method="POST" id="delete-form">
						 <button class="btn btn-danger btn-xs width">DELETE</button>
					</form>
					<%}%>
				</div>

			</div>
			<div class="well">
					<div class="text-right">
						<a class="btn btn-success btn-sm" href="/visitingplaces/<%=visitingplace._id%>/comments/new">Add new comment</a>
					</div>	
					<hr>
					<%visitingplace.comments.forEach(function (comment) {%>
					<div class="row">
						<div class="col-md-12">
							<strong><%=comment.author.username%></strong>
							<span class="pull-right">10 days ago</span>
							   
							<p><%=comment.text%></p>
							<%if(currentUser && comment.author.id.equals(currentUser._id)){%>
							<a href="/visitingplaces/<%=visitingplace._id%>/comments/<%=comment._id%>/edit" class="btn btn-warning btn-xs width">
								EDIT
							</a>
							<form action="/visitingplaces/<%=visitingplace._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" id="delete-form">
						 	<button class="btn btn-danger btn-xs width">DELETE</button>
							</form>
							<%}%>
				
						</div>
					</div>
					<br>
		 
					<% })%>

			</div>
		</div>
			
			 

			 
			
			
			
	<br><br>	

			
	</div>



	 
	
  
<%include ../partials/footer%>


